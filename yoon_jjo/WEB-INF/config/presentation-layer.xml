<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:context="http://www.springframework.org/schema/context"
	xmlns:mvc="http://www.springframework.org/schema/mvc"
	xsi:schemaLocation="http://www.springframework.org/schema/mvc http://www.springframework.org/schema/mvc/spring-mvc-4.3.xsd
		http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd
		http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-4.3.xsd">
	
	<!-- 에러페이지 설정 -->
	<bean id="exceptionResolver" class="org.springframework.web.servlet.handler.SimpleMappingExceptionResolver">
		<!-- <property name="exceptionMappings">
			<props>
				<prop key="java.lang.ArithmeticException">
					common/arithmeticError.jsp
				</prop>
				<prop key="java.lang.NullPointerException">
					common/nullPointerError.jsp
				</prop>
			</props>
		</property> -->
		<property name="defaultErrorView" value="error"/>
	</bean>
	<!-- 컨트롤러의 mvc annotation사용을위함(json으로 변환하기 위해 사용하는 컨버터를 위한 설정(모든 컨버터를 다 생성시켜준다))-->
	<mvc:annotation-driven></mvc:annotation-driven>
	<context:component-scan base-package="com.web.rnb.controller" />
	
	<!-- Resolves views selected for rendering by @Controllers to .jsp resources in the /WEB-INF/views directory -->
	<bean class="org.springframework.web.servlet.view.InternalResourceViewResolver">
		<property name="prefix" value="/WEB-INF/views/" />
		<property name="suffix" value=".jsp" />
	</bean>
	<!-- Interceptor 설정 -->
	<mvc:interceptors>
		<mvc:interceptor>
			<mvc:mapping path="/index.do"/><!-- 중복으로 path값을 설정해줄수있다. -->
			<mvc:mapping path="/photo.do"/>
			<mvc:mapping path="/photoList.do"/>
			<mvc:mapping path="/photoDetail.do"/>
			<mvc:mapping path="/write.do"/>
			<mvc:mapping path="/writelist.do"/>
			<mvc:mapping path="/writedetail.do"/>
			<mvc:mapping path="/myPage.do"/>
			<mvc:mapping path="/insertPhoto.do"/>
			<mvc:mapping path="/getListPhoto.do"/>
			<mvc:mapping path="/getDetailPhoto.do"/>
			<mvc:mapping path="/deletePhoto.do"/>
			<mvc:mapping path="/updatePhoto.do"/>
			<mvc:mapping path="/todolist.do"/>
			<mvc:mapping path="/register.do"/>
			<mvc:mapping path="/todolistComplete.do"/>
			<mvc:mapping path="/todolistDelete.do"/>
			<mvc:mapping path="/echo.do"/>
			<mvc:mapping path="/chat.do"/>
			<mvc:mapping path="/chatWrite.do"/>
			<mvc:mapping path="/insertWrite.do"/>
			<mvc:mapping path="/getListWrite.do"/>
			<mvc:mapping path="/getDetailWrite.do"/>
			<mvc:mapping path="/updateWrite.do"/>
			<mvc:mapping path="/deleteWrite.do"/>
			<bean id="LoggerInterceptor" class="com.web.rnb.common.LoggerInterceptor"></bean>
		</mvc:interceptor>
	</mvc:interceptors>
	
</beans>
